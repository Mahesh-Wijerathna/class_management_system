# Frontend Environment Configuration
# Copy this file to .env and update the values

# API Base URLs
REACT_APP_API_BASE_URL=http://localhost:8081
REACT_APP_CLASS_API_BASE_URL=http://localhost:8087
REACT_APP_TEACHER_API_BASE_URL=http://localhost:8088
REACT_APP_STUDENT_API_BASE_URL=http://localhost:8089

# Application Settings
REACT_APP_APP_NAME=TCMS
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_PAYMENT_TRACKING=true
REACT_APP_ENABLE_ATTENDANCE_TRACKING=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true

# External Services
REACT_APP_WHATSAPP_ENABLED=true
REACT_APP_EMAIL_ENABLED=true
REACT_APP_SMS_ENABLED=false

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Session Settings
REACT_APP_SESSION_TIMEOUT=900000
REACT_APP_REFRESH_TOKEN_INTERVAL=840000

# Development Settings
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_ENABLE_MOCK_DATA=false 